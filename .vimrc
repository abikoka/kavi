set expandtab
set shiftwidth=2
set tabstop=2
set smarttab
set smartindent
set autoindent

set encoding=utf-8
set fileencodings=utf-8,iso-2022-jp,euc-jp

set nocompatible
set ai nu

set undolevels=10000
set undofile



" centralize backups, swapfiles and undo history
set backupdir=~/.vim/backups
set directory=~/.vim/swaps
:syntax off

set undofile
set undodir=~/.vim/undo
